<div class="row">
    <div class="col s12 m6">
        <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
                <div id="error_explanation" class="card red lighten-5">
                    <div class="card-content">
                        <span class="card-title"><%= pluralize(@user.errors.count, "error") %></span>
                        <span class="card-title">prohibited this user from being saved:</span>

                        <ul>
                            <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
    </div>
    <div class="col s12 m7">
        <div class="input-field">
            <%= f.label :identificacion %>
            <%= f.text_field :identificacion %>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="input-field">
            <%= f.label :nombre %>
            <%= f.text_field :nombre %>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="input-field">
            <%= f.label :apellidos %>
            <%= f.text_field :apellidos %>
        </div>
    </div>
    <div class="col s12 m2">
        <div class="input-field">
            <%= f.label :tipo %>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="input-field">
            <%= select_tag(:tipo, options_for_select([['Admin', 1], ['Monitor', 2], ['Docente', 3], ['Estudiante', 4]], 4), class: "browser-default") %>
        </div>
    </div>
    <div class="col s12 m7">
        <div class="input-field">
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
        <div class="input-field">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        <div class="actions">
            <%= f.submit class: "btn red white-text" %>
        </div>
        <% end %>
    </div>
</div>