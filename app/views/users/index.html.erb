<%= render 'nav' %>


<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Users</h1>

  <table>
    <thead>
      <tr>
        <th>Identificacion</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Email</th>
        <th>Password</th>
        <th>Penalizaciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.identificacion %></td>
          <td><%= user.nombre %></td>
          <td><%= user.apellidos %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= user.penalizaciones %></td>
          <td><%= link_to 'Show', user, :class => "btn white red-text" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), :class => "btn white red-text" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn red white-text" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, :class => "btn white red-text" %>
</div>