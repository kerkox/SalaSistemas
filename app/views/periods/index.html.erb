<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Periodos</h1>

    <!-- -->
    <div class="row">
        <div class="col s6 m2 l2 red">
            <p class="white-text">INICIO</p>
        </div>
        <div class="col s6 m2 l2 red">
            <p class="white-text">FINALIZACION</p>
        </div>
        <div class="col s12 m8 l8 hide-on-small-only red center">
            <p class="white-text">ACTIONS</p>
        </div>
    </div>
    <% @periods.each do |period| %>
        <div class="row">
            <div class="col s6 m2 l2">
                <p class="red-text"><%= period.fecha_inicio %></p>
            </div>
            <div class="col s6 m2 l2">
                <p class="red-text"><%= period.fecha_finalizacion %></p>
            </div>
            <div class="col s12 m8 l8 right">
                    <%= link_to '<i class="material-icons hide-on-med-and-down right">close</i>Eliminar'.html_safe , period, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn red white-text right" %>
                    <%= link_to '<i class="material-icons hide-on-med-and-down right">edit</i>Editar'.html_safe, edit_period_path(period), :class => " btn white red-text right" %>
                    <%= link_to '<i class="material-icons hide-on-med-and-down right">slideshow</i>Ver'.html_safe, period, :class => "btn white red-text right" %>
            </div>
        </div>
    <% end %>
    <!-- -->
    <br>

    <%= link_to 'New Period', new_period_path, :class  => "btn white red-text" %>
</div>