<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Reservations</h1>

  <table>
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Hora inicio</th>
        <th>Hora finalizacion</th>
        <th>User</th>
        <th>Room</th>
        <th>Period</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.fecha %></td>
          <td><%= reservation.hora_inicio %></td>
          <td><%= reservation.hora_finalizacion %></td>
          <td><%= reservation.User %></td>
          <td><%= reservation.Room %></td>
          <td><%= reservation.Period %></td>
          <td><%= link_to 'Show', reservation %></td>
          <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
          <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Reservation', new_reservation_path %>
</div>