<div class="container">
	<h1>Editing <%= @room.nombre %></h1>

	<%= form_for(@room) do |f| %>
	  <% if @room.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

	      <ul>
	      <% @room.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :cantidad_total %>
	    <%= f.number_field :cantidad_total, :readonly => true%>
	  </div>
	  <div class="field">
	    <%= f.label :cantidad_disponible %><br>
	    <%= f.number_field :cantidad_disponible %>
	  </div>
	  <div class="actions">
	    <%= f.submit :class => "btn red white-text" %>
	  </div>
	<% end %>

	<%= link_to 'Show', @room, :class => "btn white red-text" %> |
	<%= link_to 'Back', rooms_path, :class => "btn white red-text" %>
</div>