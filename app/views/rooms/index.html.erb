<nav class="red">
  <div class="container">
    <div class="nav-wrapper">
      <%= link_to 'login', root_path, :class => 'btn red white-text' %>
      <%= link_to 'periods', periods_path, :class => 'btn red white-text' %>
      <%= link_to 'reservations', reservations_path, :class => 'btn red white-text' %>
      <%= link_to 'rooms', rooms_path, :class => 'btn white red-text' %>
      <%= link_to 'users', users_path, :class => 'btn red white-text' %>
    </div>
  </div>
</nav>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Rooms</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cantidad total</th>
        <th>Cantidad disponible</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.nombre %></td>
          <td><%= room.cantidad_total %></td>
          <td><%= room.cantidad_disponible %></td>
          <td><%= link_to 'Show', room, :class => "btn white red-text" %></td>
          <td><%= link_to 'Edit', edit_room_path(room), :class => "btn white red-text" %></td>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn red white-text" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Room', new_room_path, :class => "btn white red-text" %>
</div>