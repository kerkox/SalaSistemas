<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Salas</h1>

    <div class="row">
        <div class="col s4 m2 red center">
            <p class="white-text">NOMBRE</p>
        </div>
        <div class="col s4 m2 red center">
            <p class="white-text">EQUIPOS</p>
        </div>
        <div class="col s4 m2 red center">
            <p class="white-text">DISPONIBLES</p>
        </div>
        <div class="col m6 hide-on-small-only red center">
            <p class="white-text">ACCIONES</p>
        </div>
    </div>
    <!-- -->
    <% @rooms.each do |room| %>
        <div class="row">
            <div class="col s4 m2 center">
                <p class="red-text"><%= room.nombre %></p>
            </div>
            <div class="col s4 m2 center">
                <p class="red-text"><%= room.cantidad_total %></p>
            </div>
            <div class="col s4 m2 center">
                <p class="red-text"><%= room.cantidad_disponible %></p>
            </div>
            <div class="col s12 m6 right">
                <%= link_to '<i class="material-icons">close</i>'.html_safe, room, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-floating red white-text right" %>
                <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_room_path(room), :class => "btn-floating red white-text right" %>
            </div>
        </div>
    <% end %>

    <br>

    <%= link_to '<i class="material-icons red-text">add</i>'.html_safe, new_room_path, :class => "btn-floating btn-large white" %>
</div>